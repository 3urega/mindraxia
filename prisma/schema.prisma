// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String            @id @default(cuid())
  email         String            @unique
  name          String
  password      String            // Hasheado
  posts         Post[]
  createdRoutes PostRoute[]
  routeProgress PostRouteProgress[]
  collections   PostCollection[]
  createdAt     DateTime          @default(now())
}

model Post {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  excerpt     String?
  content     String       // Markdown
  published   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  publishedAt DateTime?
  authorId    String
  author      User         @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags        Tag[]
  categories  Category[]
  subcategories Subcategory[]
  equations   Equation[]
  images      Image[]
  definitions Definition[]
  theorems    Theorem[]
  parentPostId String?     // ID del post padre (opcional)
  parentPost   Post?       @relation("PostAssociations", fields: [parentPostId], references: [id], onDelete: Cascade)
  associatedPosts Post[]   @relation("PostAssociations")
  relatedPostsA PostRelation[] @relation("PostRelationsA")
  relatedPostsB PostRelation[] @relation("PostRelationsB")
  routeItems     PostRouteItem[]
  routeProgress  PostRouteProgress[]
  collectionItems PostCollectionItem[]
  
  @@index([slug])
  @@index([published])
  @@index([parentPostId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  posts Post[]
}

model Category {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  subcategories Subcategory[]
  posts        Post[]
  routes       PostRoute[]
  
  @@index([slug])
}

model Subcategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]
  
  @@index([slug])
  @@index([categoryId])
}

model Equation {
  id          String   @id @default(cuid())
  anchorId    String   // ID único del anchor (ej: "einstein-e=mc2")
  description String?  // Descripción para búsquedas con IA
  equation    String   // LaTeX de la ecuación
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([postId, anchorId]) // Un anchorId único por post
  @@index([postId])
  @@index([anchorId])
}

model Image {
  id          String   @id @default(cuid())
  anchorId    String?  // ID único del anchor (ej: "diagrama-flujo") - opcional
  description String?  // Descripción para búsquedas con IA
  filename    String   // Nombre del archivo guardado
  originalName String  // Nombre original del archivo
  mimeType    String   // Tipo MIME (image/jpeg, image/png, etc.)
  size        Int      // Tamaño en bytes
  path        String   // Ruta relativa: /uploads/posts/[post-id]/[filename]
  url         String   // URL pública: /uploads/posts/[post-id]/[filename]
  alt         String?  // Texto alternativo
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([postId, anchorId]) // Un anchorId único por post (si tiene ancla)
  @@index([postId])
  @@index([anchorId])
}

model Definition {
  id          String   @id @default(cuid())
  anchorId    String   // ID único del anchor (ej: "def-continuidad")
  description String?  // Descripción para búsquedas con IA
  content     String   // Contenido markdown de la definición
  number      Int      // Número automático de la definición en el post
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([postId, anchorId]) // Un anchorId único por post
  @@index([postId])
  @@index([anchorId])
}

model Theorem {
  id          String   @id @default(cuid())
  anchorId    String   // ID único del anchor (ej: "thm-pitagoras")
  description String?  // Descripción para búsquedas con IA
  content     String   // Contenido markdown del teorema
  number      Int      // Número automático del teorema en el post
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([postId, anchorId]) // Un anchorId único por post
  @@index([postId])
  @@index([anchorId])
}

model PostRelation {
  id        String   @id @default(cuid())
  postAId   String
  postBId   String
  postA     Post     @relation("PostRelationsA", fields: [postAId], references: [id], onDelete: Cascade)
  postB     Post     @relation("PostRelationsB", fields: [postBId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([postAId, postBId])
  @@index([postAId])
  @@index([postBId])
}

model PostRoute {
  id          String            @id @default(cuid())
  name        String
  slug        String            @unique
  description String?
  categoryId  String
  category    Category          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  authorId    String
  author      User              @relation(fields: [authorId], references: [id], onDelete: Cascade)
  items       PostRouteItem[]
  progress    PostRouteProgress[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  @@index([slug])
  @@index([categoryId])
  @@index([authorId])
}

model PostRouteItem {
  id        String        @id @default(cuid())
  routeId   String
  route     PostRoute     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  postId    String
  post      Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  order     Int           // Posición en la secuencia (1, 2, 3...)
  
  @@unique([routeId, order])
  @@index([routeId])
  @@index([postId])
}

model PostRouteProgress {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  routeId   String
  route     PostRoute  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  postId    String
  post      Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  readAt    DateTime   @default(now())
  createdAt DateTime   @default(now())
  
  @@unique([userId, routeId, postId])
  @@index([userId])
  @@index([routeId])
  @@index([postId])
}

model PostCollection {
  id          String              @id @default(cuid())
  title       String
  description String?             // Descripción global de la agrupación
  isPublic    Boolean             @default(false)
  authorId    String
  author      User                @relation(fields: [authorId], references: [id], onDelete: Cascade)
  items       PostCollectionItem[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  
  @@index([authorId])
  @@index([isPublic])
}

model PostCollectionItem {
  id          String         @id @default(cuid())
  collectionId String
  collection  PostCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  postId      String
  post        Post           @relation(fields: [postId], references: [id], onDelete: Cascade)
  description String?        // Descripción/explicación del usuario para este post en la agrupación
  createdAt   DateTime       @default(now())
  
  @@unique([collectionId, postId])
  @@index([collectionId])
  @@index([postId])
}

