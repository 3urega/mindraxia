{
  "kind": "collectionType",
  "collectionName": "categorias",
  "info": {
    "singularName": "categoria",
    "pluralName": "categorias",
    "displayName": "Categoria",
    "description": "Categorías para organizar los artículos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "descripcion": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre",
      "required": true
    },
    "articulos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::articulo.articulo",
      "mappedBy": "categoria"
    }
  }
} 